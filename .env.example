# Beszel Monitoring Environment Configuration
# Copy to .env and fill in your actual values

# Hub Configuration
BESZEL_HUB_URL=https://your-monitoring-hub.example.com
BESZEL_TOKEN=your-universal-token-here
BESZEL_KEY=ssh-ed25519-your-public-key-here

# Agent Configuration (optional)
BESZEL_AGENT_VERSION=latest
BESZEL_INSTALL_DIR=/opt/beszel-agent
BESZEL_DATA_DIR=/var/lib/beszel-agent
BESZEL_SERVICE_USER=beszel
BESZEL_AUTO_UPDATE=true

# Admin Credentials (for API access)
BESZEL_ADMIN_EMAIL=admin@example.com
BESZEL_ADMIN_PASSWORD=your-secure-password-here